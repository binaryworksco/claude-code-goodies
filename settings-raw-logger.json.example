{
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "npx tsx ~/.claude/hooks/ts/loggers/log-input.ts"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "npx tsx ~/.claude/hooks/ts/loggers/log-input.ts"
          }
        ]
      }
    ],
    "Notification": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "npx tsx ~/.claude/hooks/ts/loggers/log-input.ts"
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "npx tsx ~/.claude/hooks/ts/loggers/log-input.ts"
          }
        ]
      }
    ]
  },
  "_comment": "Simple raw logger to see exactly what Claude Code sends to hooks",
  "_note": "All hooks log to ./logs/hooks/raw-input.json",
  "_alternative": "Replace 'npx tsx' with 'bun run' if you have bun installed for better performance"
}